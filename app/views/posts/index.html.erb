<% @posts.each do|post| %>
  <div class="post_box">
    
    <div class="post_header">
      <%= link_to post.user.name, user_path(post.user_id) %>
      <div><%= image_tag post.user.photo,class:'prof_pic_small' %></div>
      
    </div>
    
      
      
    <div class="post_body">
      <%= image_tag post.photo, class:'photo' %>
          <%= link_to 'View Post',post_path(post.id)%>
     
      <p><%= link_to post.user.name, user_path(post.user_id)%>:<%= post.description %>
    
      <% if post.user == current_user %>
        <%= link_to 'Edit Post', edit_post_path(post.id) %>
        <%= link_to 'Delete', post_path(post.id), method: :delete, data: {confirm: "are you sure?"} %>
      <% end %>
    
    
    <div class="post_comments">
      <% post.comments.each do |comment| %>
        <p><%=link_to comment.user.name, user_path(comment.user_id) %> : <%=comment.text %></p>
        <% if comment.user == current_user %>
        <%= link_to 'Delete', post_comments_path(post_id: post.id, id:comment.id), method: :delete %>
        <% end %>
      <% end %>
    
      <hr>
      <% if user_signed_in? %>
        <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do|f| %>
          <%= f.input  :text,label:"Comment", placeholder:"Add a Comment..." %>
          <%= f.submit 'Submit',class: 'btn btn-primary btn-block' %>
        <% end %>
      <% end %> 
    </div>
    </div>
  </div>
  
<% end %>